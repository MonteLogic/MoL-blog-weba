    {
      "type": "npm",
      "script": "lint:strict",
      "problemMatcher": {
        "owner": "biome",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^::(?:error|warning)\\s+file=([^,]+),line=(\\d+),col=(\\d+),endColumn=(\\d+)::(.+)$",
