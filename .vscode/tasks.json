{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "type-check",
      "problemMatcher": ["$tsc"],
      "label": "npm: type-check",
      "detail": "tsc --noEmit"
    },
    {
      "type": "npm",
      "script": "type-check:watch",
      "problemMatcher": {
        "owner": "typescript",
        "applyTo": "allDocuments",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+)\\s+-\\s+error\\s+TS(\\d+):\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[\\d+:\\d+:\\d+\\s+[AP]M\\]\\s+(File change detected|Starting compilation)",
          "endsPattern": "^\\[\\d+:\\d+:\\d+\\s+[AP]M\\]\\s+Found\\s+\\d+\\s+error"
        }
      },
      "isBackground": true,
      "label": "npm: type-check:watch",
      "detail": "tsc --noEmit --watch",
      "presentation": {
        "group": "build",
        "reveal": "never"
      }
    }
  ]
}
